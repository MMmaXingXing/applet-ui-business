.container {
  background-color: #f3f3f3;
}

.top_scan {
  width: 100%;
  height: 680rpx;
  background: linear-gradient(to bottom, rgb(113, 130, 234), rgb(94, 182, 236));
  display: flex;
  justify-content: center;
  align-items: center;
}

.top_scan .scan_img {
  width: 200rpx;
  height: 200rpx;
}

.container .content {
  padding: 65rpx 90rpx 110rpx;
  width: 100%;
  box-sizing: border-box;
}

.content .input-content {
  margin-bottom: 40rpx;
  font-size: 26rpx;
}

.content .input-content input {
  background-color: #fff;
  border-radius: 5px;
  width: 100%;
  height: 80rpx;
  margin-top:22rpx;
  padding-left: 34rpx;
  padding-right: 34rpx;
  box-sizing: border-box;
  /* box-shadow: 0px 0px 10px rgba(0,0,0,0.8) inset,0px 0px 5px rgba(200,200,200,0.5); */
  /* box-shadow: 10px 5px 10px #6d84ea inset; */
}
.content .input-content .title{
  color: #333;
}
.content .footer_btn{
  width: 100%;
  margin-top: 160rpx;
}
.footer_btn .btn{
  width: 100%;
  height: 90rpx;
  border-radius: 25px;
  font-size:30rpx;
  color: #333;
  background-color: #fff;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_btn .btn.btn_y{
  background: linear-gradient(to right, rgb(113, 130, 234), rgb(94, 182, 236));
}
