.container {
  background: linear-gradient(to bottom, rgb(94, 182, 236), rgb(113, 130, 234));
  padding: 88rpx 75rpx 82rpx;
  box-sizing: border-box;
}

.container .top_frame {
  width: 100%;
  height: 422rpx;
  position: relative;
  margin-bottom: 36rpx;
}

camera {
  width: 100%;
  height: 422rpx;
  position: relative;
}

.container .top_frame {
  transition: all 3s;
}

.container .top_frame .image {
  position: absolute;
  left: 0%;
  width: 100%;
  height: 100%;
}

.container .top_frame .image.user {
  width: 363rpx;
  height: 363rpx;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}

.container .top_frame .cover-show-text {
  position: absolute;
  top: 5rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #fff;
}



