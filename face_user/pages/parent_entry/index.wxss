.container .show_list {
  width: 100%;
  padding: 30rpx 0 70rpx 0;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}

.container .show_list .list_li {
  width: 140rpx;
  height: 196rpx;
  background-color: rgb(156, 156, 156);
  margin-top: 80rpx;
}

.container .show_list .list_li:not(:nth-of-type(3n)) {
  margin-right: 80rpx;
}

.add_user {
  z-index: 2;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.add_user .title {
  font-size: 30rpx;
  color: #fff;
  margin-right: 20rpx;
  text-align: right;
  flex-basis: 20%;
}

.add_user .content {
  flex-basis: 80%;
}

.user_list {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
}

.add_user .content input {
  background-color: #fff;
  height: 72rpx;
  border-radius: 5px;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  font-size: 26rpx;
}

.add_user .user_list:last-of-type {
  margin-bottom: 60rpx;
}

.footer_btn button {
  font-size: 30rpx;
  color: #333;
}
