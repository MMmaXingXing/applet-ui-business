.container{
  position: absolute;
  width: 100%;
  min-height: 100%;
  background-color: #1e3045;
}
.container .top{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 80%;
  background-color: #fff;
}
.container .footer{
  position: absolute;
  box-sizing: border-box;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 20%;
  display: flex;
  justify-content: space-between;
  padding: 0 5%;
  align-items: center;
}
.container .footer image{
  width: 180rpx;
  height: 180rpx;
}
