.detail_commodity swiper {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  margin-bottom: 0rpx;
}

.swiper_in_item {
  position: relative;
}
.swiper_in_item .modal{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(25, 38, 47,0.2), rgba(25, 38, 47,1));
  z-index: 200;
}

.detail_commodity .dots {
  /* width: 156rpx; */
  height: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 10rpx;
}

/*未选中时的小圆点样式 */

.detail_commodity .dot {
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.4);
}

.detail_commodity .dot:not(:last-of-type) {
  margin-right: 20rpx;
}

/*选中以后的小圆点样式  */

.detail_commodity .active {
  width: 15rpx;
  height: 15rpx;
  background-color: #fff;
}

.detail_commodity swiper image {
  width: 100%;
  height: 100%;
}

.desc_con {
  position: absolute;
  bottom: 150rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #fff;
  padding: 10rpx;
  display: inline-block;
  box-sizing: border-box;
}

/* 员工文字展示 */

.desc_con .title {
  text-align: center;
  font-size: 32rpx;
  margin-bottom:15rpx;
  display: inline-block;
}

.desc_con .price {
  text-align: center;
  font-size: 24rpx;
  color: #e2a615;
  font-weight: 600;
}

.cicle_image{
  position: absolute;
  left: 50%;
  top: 50%;
  z-index: 10;
  transform: translate(-50%,-50%);
}
.cicle_image image{
  width: 400rpx;
  height: 400rpx;
}

