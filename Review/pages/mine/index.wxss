.container{
  position: absolute;
  width: 100%;
  height:100%;
  left: 0;
  top: 0;
  background-color: rgb(245, 245, 245);
  padding:20rpx; 
  box-sizing: border-box;
}
.show_list{
  width: 100%;
  height: 180rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:30rpx 30rpx 20rpx;
  box-sizing: border-box; 
  font-size:24rpx; 
  margin-bottom: 20rpx;
  }
  .show_list .left>view{
    margin-bottom: 10rpx;
  }
  .show_list .left>view .date{
    margin-left: 20rpx;
    color: #999;
  }
  .show_list .left>view .status{
    width: 15rpx;
    height: 15rpx;
    margin-right: 10rpx;
    display: inline-block;
    border-radius: 50%;
    background-color:#999;

  }
  .show_list .right .btn{
    margin-right: 50rpx;
    width: 110rpx;
    height: 50rpx;
    /* background-color: #ccc; */
    text-align: center;
    line-height: 50rpx;
    color: #fff;
  }
  .yellow{
    background-color: rgb(247, 160, 20);
  }
  .green{
    background-color: rgb(108, 205, 55);
  }
  .red{
    background-color: rgb(250, 101, 101);
  }