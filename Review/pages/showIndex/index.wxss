.review_content{
  padding: 20rpx;
  box-sizing: border-box;
}
.review_list{
  width: 100%;
  height: 150rpx;
  border-bottom: 1px solid #f6f6f6;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  padding:40rpx 30rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
}
.review_list:first-of-type{
 /* border-top: 1rpx solid #ccc; */
}
.review_list .fir_top{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 8rpx;
}
.review_list .fir_top .title{
  margin-right: 20rpx;
  font-weight: 700;
}
.review_list .fir_top .date{
  color: #999;
}
.review_list .thr_end{
  margin-top: 8rpx;
  font-size: 22rpx;
  height: 30rpx;
  color: #999;
  width:80%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.review_list .right {
  display: flex;
  justify-content: center;
  align-items: center;
}
.review_list .right .right_icon .iconfont{
  color: #ccc;
  margin-left: 30rpx;
}
.review_list .right .review_check>view{
  color: rgb(104, 224, 199);
}
.review_list .right .review_check view:first-of-type{
margin-bottom: 30rpx;
}