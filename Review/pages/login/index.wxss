.login{
  margin-top: 150rpx;
  width:100%;
  min-height: 600rpx;
  background-color: #fff;
  padding:80rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
  box-shadow: 0px 1px 5px #ccc;
}
.login .title{
  font-weight: 550;
  font-size: 40rpx;
}
.login .input{
  width: 100%;
  border:1px solid #ccc;
  border-radius: 50px;
  font-size: 28rpx;
  padding:10rpx  30rpx;
  height: 75rpx;
  box-sizing: border-box;
}
.login .btn{
  width: 100%;
  background-color: #1bbc9b;
  border: none;
  color: #fff;
  border-radius: 50px;
  height: 75rpx;
  line-height: 75rpx;
  font-size: 30rpx;
}